<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Home</title>
    <link rel="stylesheet" href="styles.css" />
  </head>

  <body>
    <header>
      <h1>Secret club</h1>
      <div>
        <a href="logout">Log out</a>
      </div>
    </header>

    <section>
      <p>
        Hello, <%= `${userObj.firstName} ${userObj.lastName}` %>!
        <a href="upload-file">Upload</a> a new file.
      </p>
    </section>

    <section class="files">
      <h4>Your files</h4>

      <ol>
        <% userFiles.forEach(file => { %>
        <li>
          <a href="/<%= file.path %>" target="_blank"><%= file.fileName %></a>
        </li>
        <% }) %>
      </ol>
    </section>
  </body>
</html>
