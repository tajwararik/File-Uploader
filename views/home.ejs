<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Home</title>
    <link rel="stylesheet" href="styles.css" />
  </head>

  <body>
    <header>
      <h1>Secret club</h1>
      <div>
        <a href="logout">Log out</a>
      </div>
    </header>

    <section>
      <p>Hello, <%= `${userObj.firstName} ${userObj.lastName}` %>!</p>
      <p>
        <a href="upload-file">Upload</a> new file or
        <a href="create-folder">create</a> folder.
      </p>
    </section>

    <section class="files">
      <h4>Your files</h4>

      <ol>
        <% userFiles.forEach(file => { %>
        <li>
          <p><%= file.fileName %></p>
          <p>
            <strong>Size</strong>: <%= (file.size / 1024 ** 2).toFixed(2) %> MB
          </p>
          <p><strong>Created at</strong>: <%= file.formattedDate %></p>
          <a href="/<%= file.path %>" target="_blank">Download</a>
        </li>
        <% }) %>
      </ol>
    </section>
  </body>
</html>
